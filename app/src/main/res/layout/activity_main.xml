<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.myschool.MainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/shop_main_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/homePageTabMenuView"
        android:layout_alignParentTop="true"
        android:background="@color/whitesmoke"
        android:scaleType="fitXY" />

    <com.fs.widget.TabMenuView
        android:id="@+id/homePageTabMenuView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/shop_main_body"
        android:layout_alignParentBottom="true"
        android:background="@color/beige"
        android:scaleType="fitXY"/>


</RelativeLayout>